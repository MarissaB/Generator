@page
@model Generator.Pages.Encounters.Participants.EditModel

<h4>Participant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Participant.ParticipantId" />
            <input type="hidden" asp-for="Participant.EncounterId"/>
            <div class="form-group">
                <label asp-for="Participant.Name" class="control-label"></label>
                <input asp-for="Participant.Name" class="form-control" />
                <span asp-validation-for="Participant.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.MaxHealth" class="control-label"></label>
                <input asp-for="Participant.MaxHealth" class="form-control" />
                <span asp-validation-for="Participant.MaxHealth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.Armor" class="control-label"></label>
                <input asp-for="Participant.Armor" class="form-control" />
                <span asp-validation-for="Participant.Armor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participant.Note" class="control-label"></label>
                <input asp-for="Participant.Note" class="form-control" />
                <span asp-validation-for="Participant.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Encounters/Manage">Back to Encounters</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
