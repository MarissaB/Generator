@page
@model Generator.Pages.Encounters.RunModel
@{
    ViewData["Title"] = "Edit Encounter";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Run: @Html.DisplayFor(model => model.Encounter.Name)</h1>
<h4>Round: @Html.DisplayFor(model => model.Encounter.Round)</h4>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Encounter.EncounterId" />
    <input type="hidden" asp-for="Encounter.UserId" />
    <input type="hidden" asp-for="Encounter.Name" />
    <input type="hidden" asp-for="Encounter.Round" />
    <input type="hidden" asp-for="Encounter.TurnIndex" />
    @if (Model.Encounter.Round != null && Model.Encounter.Round > 1)
    {
        <button asp-page-handler="PreviousRound" class="btn btn-outline-primary mr-1">Previous Round</button>
    }
    else
    {
        <button disabled class="btn btn-outline-primary mr-1">Previous Round</button>
    }
    <button asp-page-handler="NextRound" class="btn btn-outline-primary mr-1">Next Round</button>
</form>

@if (Model.Participants != null)
{
    <h3>Participants</h3>
    <a asp-page="./Participants/Create" asp-route-id="@Model.Encounter.EncounterId">Add Participant</a>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Participants[0].Name)</th>
            <th>@Html.DisplayNameFor(model => model.Participants[0].MaxHealth)</th>
            <th>@Html.DisplayNameFor(model => model.Participants[0].Armor)</th>
            <th>@Html.DisplayNameFor(model => model.Participants[0].Note)</th>
            <th />
        </tr>
        @foreach (var item in Model.Participants)
        {
            var modalId = "modalDelete" + item.ParticipantId;
            var targetModal = "#" + modalId;
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.MaxHealth)</td>
                <td>@Html.DisplayFor(modelItem => item.Armor)</td>
                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                <td>
                    <a asp-page="./Participants/Edit" asp-route-id="@item.ParticipantId">Edit</a> |
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="@targetModal">
                        Delete
                    </button>

                    <div class="modal fade" id="@modalId" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-bs-dismiss="modal" aria-hidden="true">&times;</button>
                                    <h4 class="modal-title" id="myModalLabel">Delete Confirmation</h4>
                                </div>
                                <div class="modal-body">
                                    Delete @(item.Name)?
                                </div>
                                <div class="modal-footer">
                                    <form method="post">
                                        <input name="participantId" value="@item.ParticipantId" type="hidden" />
                                        <button asp-page-handler="DeleteParticipant" class="btn bg-danger mr-1">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
}
<div>
    <a asp-page="./Manage">Back to Encounters</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
